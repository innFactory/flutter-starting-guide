    "new stateful widget": {
        "prefix": "stateful",
        "body": [
            "import 'package:flutter/material.dart';",
            "",
            "class ${1:name of your widget} extends StatefulWidget {",
            "  ${1:name of your widget}({Key key}) : super(key: key);",
            "  @override",
            "  ${1:name of your widget}State createState() => ${1:name of your widget}State();",
            "}",
            "",
            "class ${1:name of your widget}State extends State<${1:name of your widget}> {",
            "  @override",
            "  void initState() {",
            "    super.initState();",
            "  }",
            "",
            "  @override",
            "  Widget build(BuildContext context) {",
            "    return ${2:your return};",
            "  }",
            "}",
        ],
        "description": "creates a new stateful widget"
    },
    "new stateless widget": {
        "prefix": "stateless",
        "body": [
            "import 'package:flutter/material.dart';",
            "",
            "class ${1:name of your widget} extends StatelessWidget {",
            "  ${1:name of your widget}({Key key}) : super(key: key);",
            "",
            "  @override",
            "  Widget build(BuildContext context) {",
            "    return ${2:your return};",
            "  }",
            "}",
        ],
        "description": "creates a new stateful widget"
    },
